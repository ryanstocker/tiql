%h1 Log In

= form_tag sessions_path do |f|
  .control-group
    = label_tag :email
    .controls
      = text_field_tag :email, params[:email]
  .control-group
    = label_tag :password
    .controls
      = password_field_tag :password
  .control-group
    .controls
      = submit_tag 'Log In', :class => 'btn'
